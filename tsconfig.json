{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    // Target latest version of ECMAScript.
    "target": "esnext",
    "sourceMap": true,
    // path to output directory
    "outDir": "./dist",
    // enable strict null checks as a best practice
    "strictNullChecks": false,
    // Search under node_modules for non-relative imports.
    "moduleResolution": "node",
    // Process & infer types from .js files.
    "allowJs": true,
    "baseUrl": "./",
    "incremental": true,
    "alwaysStrict": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    //UnusedClasses
    //"noUnusedLocals": true,
    "noUnusedParameters": false,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "forceConsistentCasingInFileNames": true,
    "importHelpers": true,
    "paths": {
      "@src/*": ["src/*"],
      "@auth/*": ["src/modules/auth/*"],
      "@users/*": ["src/modules/users/*"],
      "@health-check/*": ["src/modules/health-check/*"],
      "@database/*": ["src/modules/database/*"],
      "@utils/*": ["src/modules/utils/*"],
      "@auth.user/*": ["src/modules/auth.user/*"],
      "@manager/*": ["src/modules/manager/*"],
      "@common/*": ["src/common/*"],
      "@consortiums/*": ["src/modules/consortiums/*"],
      "@betting.panel/*": ["src/modules/betting.panel/*"],
      "@dashboard/*": ["src/modules/dashboard/*"],
      "@lotteries/*": ["src/modules/lotteries/*"],
      "@transactions/*": ["src/modules/transactions/*"],
      "@results/*": ["src/modules/results/*"],
      "@bankings/*": ["src/modules/bankings/*"],
      "@chat/*": ["src/modules/chat/*"],
      "@web.users/*": ["src/modules/web-users/*"],
      "@common.module/*": ["src/modules/common/*"]
    },
  }
}
