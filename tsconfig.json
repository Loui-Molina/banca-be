{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2020",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "paths": {
      "@src/*": ["src/*"],
      "@auth/*": ["src/modules/auth/*"],
      "@users/*": ["src/modules/users/*"],
      "@health-check/*": ["src/modules/health-check/*"],
      "@database/*": ["src/modules/database/*"],
    },
  }
}
